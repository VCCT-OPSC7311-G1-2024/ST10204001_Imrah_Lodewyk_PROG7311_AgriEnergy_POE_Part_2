@page
@model LoginModel

@{
	ViewData["Title"] = "Log in";
}

<div class="transparent-card col-md-4">

	<h1>@ViewData["Title"]</h1>
	<section>
		<form id="account" method="post">
			<h3>Welcome back!</h3>
			<!-- took away the "elite employee" in the heading -->
			<hr />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="small">
				<label asp-for="Input.Email" class="form-label"></label>
				<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
				<span asp-validation-for="Input.Email" class="text-danger"></span>
			</div>
			<div class="small">
				<label asp-for="Input.Password" class="form-label"></label>
				<input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
				<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>
			<div class="smaller">
				<div class="checkbox small">
					<label asp-for="Input.RememberMe" class="form-label small">
						<input class="form-check-input" asp-for="Input.RememberMe" />
						@Html.DisplayNameFor(m => m.Input.RememberMe)
					</label>
				</div>
			</div>
			<div>
				<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-outline-light">Log in</button>
			</div>
			<div class="text-center">
				<p>
					<i class="fa-solid fa-key small"></i>
					<a class="no-a-decoration" style="font-size:medium" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
				</p>
				<p>
					<i class="fa-solid fa-user small"></i>
					<a class="no-a-decoration" style="font-size:medium" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
				</p>
				<p>
					<i class="fa-solid fa-envelope small"></i>
					<a class="no-a-decoration" style="font-size:medium" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
				</p>
			</div>
		</form>
	</section>
</div>



@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
