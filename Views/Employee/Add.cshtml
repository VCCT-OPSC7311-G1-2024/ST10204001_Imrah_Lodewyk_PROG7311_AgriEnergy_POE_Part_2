@using AgriEnergy_ST10204001_POE_Part_2.Models
@model User

<h1>Add Farmer Email</h1>
<hr />
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating">
        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="ContactNumber" class="form-control" aria-required="true" />
        <label asp-for="ContactNumber">Contact Number</label>
        <span asp-validation-for="ContactNumber" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="FirstName" class="form-control" aria-required="true" />
        <label asp-for="FirstName">First Name</label>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="Surname" class="form-control" aria-required="true" />
        <label asp-for="Surname">Last Name</label>
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>

    <div class="form-floating">
        <input asp-for="FarmerDetail.Address" class="form-control" aria-required="true" />
        <label asp-for="FarmerDetail.Address">Address</label>
        <span asp-validation-for="FarmerDetail.Address" class="text-danger"></span>
    </div>

    <div class="form-floating">
        <input asp-for="FarmerDetail.FarmType" class="form-control" aria-required="true" />
        <label asp-for="FarmerDetail.FarmType">Farm Type</label>
        <span asp-validation-for="FarmerDetail.FarmType" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input class="form-control" readonly disabled />
        <label>Password: TemporaryPassword@1</label>
    </div>
    <button id="registerSubmit" type="submit" class="btn btn-primary">Submit</button>
</form>


